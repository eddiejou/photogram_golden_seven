
<div class="container">
  <h1>
    Photo ID
  </h1>



  <img src="<%= @photo.source %>">

  <p>
    <%= @photo.caption %>
  </p>

<div>
  <%= @photo.created_at %>
</div>
<div>
  <%= time_ago_in_words(@photo.created_at) %>
</div>

  <div class="caption">
    <a href="http://localhost:3000/photos/" class="btn btn-default btn-block">
      Back
    </a>
    <a href="http://localhost:3000/photos/<%= @photo.id %>/edit" class="btn btn-default btn-block">
      Edit
    </a>
    <a href="http://localhost:3000/delete_photo/<%= @photo.id %>" class="btn btn-default btn-block">
      Delete
    </a>
  </div>
</div>
